# GET all tasks
GET http://localhost:8000/tasks
Accept: application/json


####
# GET a single task
GET http://localhost:8000/tasks/1
Accept: application/json

###

# GET a task that doesnt exist 
GET http://localhost:8000/tasks/100
Accept: application/json

###

# POST create a new task
POST http://localhost:8000/tasks
Content-Type: application/json

{
  "title": "Test",
  "user_id": 1
}

###

# POST a task with no title
POST http://localhost:8000/tasks
Content-Type: application/json

{
  "user_id": 1
}

###


# POST a task with invalid user_id
POST http://localhost:8000/tasks
Content-Type: application/json

{
  "title": "Test",
  "user_id": 100
}

###




# PUT update a task by ID
PUT http://localhost:8000/tasks/1
Content-Type: application/json

{
  "completed": true
}

###

# DELETE a task by ID
DELETE http://localhost:8000/tasks/1


